                        android:layout_height="22dp"
                        android:layout_marginLeft="20dp"
                        android:text="Culinária"
                        android:layout_marginTop="45dp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/style_button_ctg"
                        android:textSize="15dp"
                        />
