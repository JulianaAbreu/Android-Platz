        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/style_button_perfil_likes"


            android:src="@drawable/ic_favorite_white_testee" />

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="44dp"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="275dp"
            android:background="@drawable/style_button_perfil_euvou"
            android:src="@drawable/ic_check_white_perfil" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="327dp"
            android:background="@drawable/style_button_talvez" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="232dp"
            android:text="Eventos Curtidos"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="285dp"
            android:text="Marcados Presença"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="340dp"
            android:text="0 Talvez"
            android:textColor="#000000"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginTop="50dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="Email:"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-315dp"
                android:layout_marginTop="25dp"
                android:text="Cidade:"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cidadeEstadoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="25dp"
                android:text="São Paulo / SP" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-315dp"
                android:layout_marginTop="43dp"
                android:text="Nascimento:"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dataNascimentoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="43dp"
                android:text="22/07/1999" />

        </LinearLayout>

        <TextView
            android:id="@+id/nomeUsuario"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCamera"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15dp" />


    </RelativeLayout>


</ScrollView>
