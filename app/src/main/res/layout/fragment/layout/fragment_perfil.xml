<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.jaqueju.appplatz.Fragment.PerfilFragment">


        <LinearLayout
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="#F8CF8F"

            android:orientation="horizontal">


        </LinearLayout>

        <Button
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:textAllCaps="false"
            android:text="10 Pontos"
            android:textColor="#FFFFFF"
            android:background="@drawable/style_button_trofeis"/>

        <Button
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="5 Confirmados"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/style_button_trofeis"/>


        <ImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-70dp"
            android:background="@drawable/style_profile_circular_border_imageview"
            android:elevation="100dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar"
            android:cropToPadding="false"
            android:clickable="true" />

        <Button
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:textAllCaps="false"
            android:layout_marginLeft="100dp"
            android:text="Trocar foto do Perfil"
            android:layout_marginTop="150dp"
            android:background="@drawable/style_button_take_photo"
            />

        <TextView
            android:layout_marginTop="190dp"
            android:layout_width="200dp"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content"
            android:text="Juliana Cerqueira de Abreu"
            android:textSize="15dp"
            android:textColor="#000000"
            />


